{% extends 'base.html.twig' %}

{% block title %}Plaćanje{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/checkout.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <h2 id="title" class="text-center mt-2 bg-success text-white p-2">Plaćanje <i class="fas fa-hand-holding-usd"></i></h2>
        <div class="row mt-3">
            <div class="col-md-4 order-md-2 mb-4">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Vaša košarica</span>
                </h4>
                <ul class="list-group mb-3">
                    {% for cartItem in cartItems %}
                        <li class="list-group-item d-flex justify-content-between lh-condensed">
                            <div>
                                <h6 class="my-0">{{ cartItem.item.title }}</h6>
                                <small class="text-muted">{{ cartItem.color.name }} boja |</small>
                                <small class="text-muted">Veličina {{ cartItem.size.value }}</small>
                            </div>
                            <span class="text-muted">{{ cartItem.item.price|number_format(2, '.', ',') }} kn</span>
                        </li>
                    {% endfor %}
                    <li class="list-group-item d-flex justify-content-between bg-light">
                        <div class="text-success">
                            <h6 class="my-0">Akcija</h6>
                        </div>
                        <span class="text-success">-$5</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between bg-light">
                        <div class="text-success">
                            <h6 class="my-0">Promo code</h6>
                            <small>EXAMPLECODE</small>
                        </div>
                        <span class="text-success">-$5</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between bg-light">
                        <div class="text-success">
                            <h6 class="my-0">Iskorištavanje bodova s loyalty kartice</h6>
                            <small>10 bodova</small>
                        </div>
                        <span class="text-success">-$5</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Ukupno (kn)</span>
                        <strong>{{ totalPrice|number_format(2, '.', ',') }}</strong>
                    </li>
                </ul>

                <form class="card p-2">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Promo code">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-secondary">Redeem</button>
                        </div>
                    </div>
                </form>
                <form class="card p-2">
                    <div class="input-group">
                        <input type="text" class="form-control">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-secondary">Iskoristi bodove</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-8 order-md-1">
                <h4 class="mb-3">Odabir adrese isporuke</h4>
                {{ include('checkout/_form.html.twig') }}
            </div>
        </div>

    </div>
{% endblock %}

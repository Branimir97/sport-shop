{% extends 'base.html.twig' %}

{% block title %}Plaćanje{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/checkout.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <h2 id="title" class="text-center mt-2 bg-success text-white p-2">Plaćanje
            <i class="fas fa-hand-holding-usd"></i>
        </h2>
        <div class="row mt-3">
            <div class="col-md-4 order-md-2 mb-4">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Vaša košarica</span>
                </h4>
                <ul class="list-group mb-3">
                    {% for cartItem in cartItems %}
                        <li class="list-group-item d-flex justify-content-between lh-condensed">
                            <div>
                                <h6 class="my-0">{{ cartItem.item.title }}</h6>
                                <small class="text-muted">{{ cartItem.color.name }} boja |</small>
                                <small class="text-muted">Veličina {{ cartItem.size.value }}</small><br>
                                <small class="text-muted">Količina: {{ cartItem.quantity }} |</small>
                                <small class="text-muted">Cijena po kom.:
                                    {{ cartItem.item.price|number_format(2, '.', ',') }} kn
                                </small>
                            </div>
                            <span class="text-muted">
                                {{ (cartItem.item.price * cartItem.quantity)|number_format(2, '.', ',') }} kn
                            </span>
                        </li>
                        {% if cartItem.item.actionItem != null %}
                            <li class="list-group-item d-flex justify-content-between bg-light">
                                <div class="text-success">
                                    <h6 class="my-0">{{ cartItem.item.actionItem.title }}</h6>
                                    <small class="text-muted">
                                        Popust {{ cartItem.item.actionItem.discountPercentage }}%
                                    </small>
                                </div>
                                <span class="text-success">
                                        -{{ (cartItem.item.price * cartItem.quantity)*(cartItem.item.actionItem.discountPercentage)/100 }} kn
                                    </span>
                            </li>
                        {% endif %}
                        {% for cartItemCategory in cartItem.item.itemCategories %}
                            {% if cartItemCategory.category.actionCategory != null %}
                                <li class="list-group-item d-flex justify-content-between bg-light">
                                    <div class="text-success">
                                        <h6 class="my-0">{{ cartItemCategory.category.actionCategory.title }}</h6>
                                        <small class="text-muted">
                                            Popust {{ cartItemCategory.category.actionCategory.discountPercentage }}%
                                        </small>
                                    </div>
                                    <span class="text-success">
                                        -{{ (cartItem.item.price * cartItem.quantity)*(cartItemCategory.category.actionCategory.discountPercentage)/100 }} kn
                                    </span>
                                </li>
                            {% endif %}
                        {% endfor %}
                    {% endfor %}
                    {% if app.session.get('discountWithUsedCredits') != null %}
                        <li class="list-group-item d-flex justify-content-between bg-light">
                            <div class="text-success">
                                <h6 class="my-0">Iskorištavanje bodova s loyalty kartice</h6>
                            </div>
                            <span class="text-success">-{{ app.session.get('discountWithUsedCredits') }} kn</span>
                        </li>
                    {% endif %}
                    {% if app.session.get('discountWithUsedPromoCode') != null %}
                        <li class="list-group-item d-flex justify-content-between bg-light">
                            <div class="text-success">
                                <h6 class="my-0">Promo kod {{ app.session.get('promoCode') }}</h6>
                                <small class="text-muted">
                                    Popust {{ app.session.get('promoCodeDiscount') }}%
                                </small>
                            </div>
                            <span class="text-success">-{{ app.session.get('discountWithUsedPromoCode') }} kn</span>
                        </li>
                    {% endif %}
                    {% if discount == 0 %}
                        {% if totalPrice < 300%}
                            <li class="list-group-item d-flex justify-content-between">
                                <span>Poštarina</span>
                                <strong>30 kn</strong>
                            </li>
                            <li class="list-group-item d-flex justify-content-between text-danger">
                                <span>Ukupno</span>
                                <strong>{{ (totalPrice + 30)|number_format(2, '.', ',') }} kn</strong>
                            </li>
                        {% else %}
                            <li class="list-group-item d-flex justify-content-between text-success">
                                <span>Poštarina</span>
                                <strong>Besplatna</strong>
                            </li>
                            <li class="list-group-item d-flex justify-content-between text-danger">
                                <span>Ukupno</span>
                                <strong>{{ totalPrice|number_format(2, '.', ',') }} kn</strong>
                            </li>
                        {% endif %}
                    {% else %}
                        <li class="list-group-item d-flex justify-content-between text-success">
                            <span>Popust</span>
                            <strong>- {{ discount|number_format(2, '.', ',') }} kn</strong>
                        </li>
                        {% if totalPrice < 300 %}
                            <li class="list-group-item d-flex justify-content-between">
                                <span>Poštarina</span>
                                <strong>30 kn</strong>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <span>Ukupno bez popusta</span>
                                <strong>{{ (totalPrice+30)|number_format(2, '.', ',') }} kn</strong>
                            </li>
                            <li class="list-group-item d-flex justify-content-between text-danger">
                                <span>Ukupno s popustom</span>
                                <strong>{{ (totalPriceWithDiscount+30)|number_format(2, '.', ',') }} kn</strong>
                            </li>
                        {% else %}
                            <li class="list-group-item d-flex justify-content-between text-success">
                                <span>Poštarina</span>
                                <strong>Besplatna</strong>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <span>Ukupno bez popusta kn</span>
                                <strong>{{ totalPrice|number_format(2, '.', ',') }}</strong>
                            </li>
                            <li class="list-group-item d-flex justify-content-between text-danger">
                                <span>Ukupno s popustom</span>
                                <strong>{{ totalPriceWithDiscount|number_format(2, '.', ',') }} kn</strong>
                            </li>
                        {% endif %}
                    {% endif %}
                </ul>
                <div class="promo_code_credits p-2">
                    {{ include('promo_code_user/_form.html.twig') }}
                </div>
                {% if loyaltyCardCredits is not null %}
                    <p class="text-center pt-2">Na loyalty kartici vjernosti imate {{ loyaltyCardCredits }} bodova.</p>
                    <p id="credits" class="text-center">
                        Broj ostvarenih bodova na kartici vjernosti ukoliko izvršite plaćanje:
                        <span>
                            <b>
                                {{ creditsEarned }}
                            </b>
                        </span>
                    </p>
                {% endif %}
            </div>
            <div class="col-md-8 order-md-1">
                <h4 class="mb-3">Odabir adrese isporuke</h4>
                {{ include('checkout/_form.html.twig') }}
            </div>
        </div>

    </div>
{% endblock %}

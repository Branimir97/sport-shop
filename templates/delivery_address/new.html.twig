{% extends 'base.html.twig' %}

{% block title %}
    {{ 'new.title'|trans({}, 'delivery_address') }}
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("css/container50.css") }}">
{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-2 bg-light p-2">
            {{ 'new.heading'|trans({}, 'delivery_address') }}
        </h2>

        {% if is_granted("ROLE_ADMIN") %}
            <a href="{{ path('delivery_address_index') }}">
                <i class="fas fa-arrow-alt-circle-left"></i>
                {{ 'deliveryAddressList'|trans({}, 'delivery_address') }}
            </a>
        {% endif %}

        {{ include('delivery_address/_form.html.twig') }}
    </div>
{% endblock %}

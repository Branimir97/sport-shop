{% extends 'base.html.twig' %}

{% block title %}SportShop{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/homepage.css') }}">
    <link rel="stylesheet" href="{{ asset('css/items_list.css') }}">
{% endblock %}

{% block body %}
    <div class="container-fluid mt-1 pl-0 pr-0">
        <div id="carousel-short-info" class="carousel bg-secondary text-center">
            <div id="carouselExampleIndicators" class="carousel slide"
                 data-ride="carousel" data-interval="7000">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <h5 class="bg-secondary text-center mt-1 pt-1 text-white">
                            {{ 'carouselMessage1'|trans({}, 'homepage')}}
                        </h5>
                    </div>
                    <div class="carousel-item">
                        <h5 class="bg-secondary text-center mt-1 pt-1 text-white">
                            {{ 'carouselMessage2'|trans({}, 'homepage')}}
                        </h5>
                    </div>
                    <div class="carousel-item">
                        <h5 class="bg-secondary text-center mt-1 pt-1 text-white">
                            {{ 'carouselMessage3'|trans({}, 'homepage')}}
                        </h5>
                    </div>
                    <div class="carousel-item">
                        <h5 class="bg-secondary text-center mt-1 pt-1 text-white">
                            {{ 'carouselMessage4'|trans({}, 'homepage')}}
                        </h5>
                    </div>
                </div>
            </div>
        </div>

        <div id="carousel-homepage-info" class="carousel mt-1">
            <div id="carouselExampleIndicators2" class="carousel slide"
                 data-ride="carousel">
                <ol class="carousel-indicators">
                    <li class="mr-1 active" data-target="#carouselExampleIndicators2"
                        data-slide-to="0">
                    </li>
                    <li class="mr-1" data-target="#carouselExampleIndicators2"
                        data-slide-to="1">
                    </li>
                    <li class="mr-1" data-target="#carouselExampleIndicators2"
                        data-slide-to="2">
                    </li>
                    <li class="mr-1" data-target="#carouselExampleIndicators2"
                        data-slide-to="3">
                    </li>
                    <li class="mr-1" data-target="#carouselExampleIndicators2"
                        data-slide-to="4">
                    </li>
                    <li class="mr-1" data-target="#carouselExampleIndicators2"
                        data-slide-to="5">
                    </li>
                    <li class="mr-1" data-target="#carouselExampleIndicators2"
                        data-slide-to="6">
                    </li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <div class="carousel-content">
                            <p>
                                {{ 'carouselContent1'|trans({}, 'homepage')}}
                            </p>
                        </div>
                        <a href="{{ path('special_offer') }}">
                            <img src="{{ asset('/images/cover1.jpg') }}" alt="First slide">
                        </a>
                    </div>
                    <div class="carousel-item">
                        <div class="carousel-content">
                            <p>
                                {{ 'carouselContent2'|trans({}, 'homepage')}}
                            </p>
                        </div>
                        <a href="{{ path('items_list', {
                            ('categories'|trans({}, 'navigation')):
                            ('sportsEquipment'|trans({}, 'navigation'))~ ',' ~
                            ('football'|trans({}, 'navigation'))
                            }) }}">
                            <img src="{{ asset('/images/cover2.jpg') }}" alt="Second slide">
                        </a>
                    </div>
                    <div class="carousel-item">
                        <div class="carousel-content">
                            <p>
                                {{ 'carouselContent3'|trans({}, 'homepage')}}
                            </p>
                        </div>
                        <a href="{{ path('items_list', {
                            ('categories'|trans({}, 'navigation')):
                            ('clothes'|trans({}, 'navigation'))~ ',' ~
                            ('clothingAccessories'|trans({}, 'navigation'))
                            }) }}">
                            <img src="{{ asset('/images/cover3.jpg') }}" alt="Third slide">
                        </a>
                    </div>
                    <div class="carousel-item">
                        <div class="carousel-content">
                            <p>
                                {{ 'carouselContent4'|trans({}, 'homepage')}}
                            </p>
                        </div>
                        <a href="{{ path('items_list', {
                            ('categories'|trans({}, 'navigation')):
                            ('footwear'|trans({}, 'navigation'))~ ',' ~
                            ('runningShoes'|trans({}, 'navigation'))
                            }) }}">
                            <img src="{{ asset('/images/cover4.jpg') }}" alt="Fourth slide">
                        </a>
                    </div>
                    <div class="carousel-item">
                        <div class="carousel-content">
                            <p>
                                {{ 'carouselContent5'|trans({}, 'homepage')}}
                            </p>
                        </div>
                        <a href="{{ path('items_list', {
                            ('categories'|trans({}, 'navigation')):
                            ('clothes'|trans({}, 'navigation'))
                            }) }}">
                            <img src="{{ asset('/images/cover5.jpg') }}" alt="Fifth slide">
                        </a>
                    </div>
                    <div class="carousel-item">
                        <div class="carousel-content">
                            <p>
                                {{ 'carouselContent6'|trans({}, 'homepage')}}
                            </p>
                        </div>
                        <a href="{{ path('items_list', {
                            ('categories'|trans({}, 'navigation')):
                            ('sportsEquipment'|trans({}, 'navigation'))
                            }) }}">
                            <img src="{{ asset('/images/cover6.jpg') }}" alt="Sixth slide">
                        </a>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators2"
                   role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators2"
                   role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

        {% if app.user %}
                <h4 class="bg-secondary text-center mt-1 pt-1 text-white
                recommended-categories-title">
                    {{ 'recommendedItemsTitle'|trans({}, 'homepage')}}
                </h4>
            {% if suggestedItems is same as null or suggestedItems|length == 0 %}
                <p class="text-center">
                    {{ 'noRecommendedItems'|trans({}, 'homepage')}}
                </p>
            {% else %}
                <div class="row">
                    {% for item in suggestedItems %}
                    <div class="col-sm-3 mb-2">
                        <div class="one_item">
                            <div class="img-wrapper">
                                {% set difference =
                                date(item.createdAt|date('Y/m/d')).diff(date('now'|date('Y/m/d'))) %}
                                {% set daysDiff = difference.days %}
                                {% if daysDiff <= 2 %}
                                <div class="new_badge p-1">
                                    {{ 'new'|trans({}, 'item_list') }}
                                </div>
                                {% endif %}

                                {% for itemCategory in item.itemCategories %}
                                    {% if itemCategory.category.actionCategory != null %}
                                        <div class="action_badge p-1">
                                            - {{ itemCategory.category.actionCategory.discountPercentage }}%
                                        </div>
                                    {% endif %}
                                {% endfor %}

                                {% if item.actionItem %}
                                    <div class="action_badge p-1">
                                        - {{ item.actionItem.discountPercentage }}%
                                    </div>
                                {% endif %}

                                {% if item.images|length == 0 %}
                                    <img src="{{ asset('images/logo.png') }}" alt="item_image">
                                {% else %}
                                    <img src="{{ asset('uploads/')~item.images[0].path }}" alt="item_image">
                                {% endif %}
                            </div>
                            <div class="overlay">
                                <a href="{{ path('wish_list_item_new', {'id':item.id}) }}" class="icon_wish_list"
                                   title="{{ 'addToWishListTitle'|trans({}, 'item_list') }}">
                                    <i class="fas fa-clipboard-check"></i>
                                </a>
                                <a href="{{ path('item_details', {'id':item.id}) }}" class="icon_details"
                                   title="{{ 'detailsTitle'|trans({}, 'item_list') }}">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                            </div>
                            <div class="item_info">
                                <h6 class="text-center bg-light p-1 mb-0 title">
                                    {{ item.title }}
                                </h6>
                                <p class="text-muted text-center colors m-0 p-1">
                                    {{ 'availableColors'|trans({}, 'item_list') }}
                                </p>
                                <div class="item-colors text-center">
                                    {% if item.itemColors|length == 0 %}
                                        <small>
                                            {{ 'colorsNotDefined'|trans({}, 'item_list') }}
                                        </small>
                                    {% else %}
                                        {% for itemColor in item.itemColors %}
                                            <a id="color" style="background-color: {{ itemColor.color.value }}"></a>
                                        {% endfor %}
                                    {% endif %}
                                </div>
                                <h6 id="price" class="text-center p-1 bg-success text-white">
                                    {{ 'price'|trans({}, 'item_list') }}:
                                    <span>
                                        {{ item.price|number_format(2, '.', ',') }} kn
                                    </span>
                                </h6>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            {% endif %}
        {% endif %}

        {% if app.user and prominentCategories|length != 0 %}
            <h4 class="bg-secondary text-center mt-1 pt-1 text-white top-categories-title">
                {{ 'prominentCategoriesTitleUser'|trans({}, 'homepage')}}
            </h4>
            <div class="row ml-0 mr-0 mt-1 top-categories justify-content-center">
                {% for prominentCategory in prominentCategories %}
                    <div class="col-md-15">
                        <div class="item1 mb-2">
                            <p>
                                {{ prominentCategory.name }}
                            </p>
                            <a
                                href="{{ path('items_list', {
                                    ('categories'|trans({}, 'navigation')):
                                    ( prominentCategory.name )
                                }) }}">
                                <img src="{{ asset('/images/'~prominentCategory.name~'.jpg') }}" alt="">
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <h4 class="bg-secondary text-center mt-1 pt-1 text-white top-categories-title">
                {{ 'prominentCategoriesTitleSystem'|trans({}, 'homepage')}}
            </h4>
            <div class="row ml-0 mr-0 mt-1 top-categories">
                <div class="col-md-15">
                    <div class="row ml-0 mr-0 no-gutters">
                        <div class="col-md-12 mb-2 item1">
                            <p>
                                {{ 'football'|trans({}, 'homepage')}}
                            </p>
                            <a
                                href="{{ path('items_list', {
                                    ('categories'|trans({}, 'navigation')):
                                    ('football'|trans({}, 'navigation'))
                                }) }}">
                                <img src="{{ asset('/images/Football.jpg') }}" alt="">
                            </a>
                        </div>
                        <div class="col-md-12 mb-2 item2">
                            <p>
                                {{ 'handball'|trans({}, 'homepage')}}
                            </p>
                            <a
                                href="{{ path('items_list', {
                                    ('categories'|trans({}, 'navigation')):
                                    ('handball'|trans({}, 'navigation'))
                                }) }}">
                                <img src="{{ asset('/images/Handball.jpg') }}" alt="">
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-15 activity mb-2">
                    <p>
                        {{ 'running'|trans({}, 'homepage')}}
                    </p>
                    <a
                        href="{{ path('items_list', {
                            ('categories'|trans({}, 'navigation')):
                            ('footwear'|trans({}, 'navigation'))~ ',' ~
                            ('runningShoes'|trans({}, 'navigation'))
                        }) }}">
                        <img src="{{ asset('/images/Running shoes.jpg') }}" alt="">
                    </a>
                </div>
                <div class="col-md-15">
                    <div class="row ml-0 mr-0 no-gutters">
                        <div class="col-md-12 mb-2 item1">
                            <p>
                                {{ 'basketball'|trans({}, 'homepage')}}
                            </p>
                            <a
                                href="{{ path('items_list', {
                                    ('categories'|trans({}, 'navigation')):
                                    ('basketball'|trans({}, 'navigation'))
                                }) }}">
                                <img src="{{ asset('/images/Basketball.jpg') }}" alt="">
                            </a>
                        </div>
                        <div class="col-md-12 mb-2 item2">
                            <p>
                                {{ 'volleyball'|trans({}, 'homepage')}}
                            </p>
                            <a
                                href="{{ path('items_list', {
                                    ('categories'|trans({}, 'navigation')):
                                    ('volleyball'|trans({}, 'navigation'))
                                }) }}">
                                <img src="{{ asset('/images/Volleyball.jpg') }}" alt="">
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-15 activity mb-2">
                    <p>
                        {{ 'fitness'|trans({}, 'homepage')}}
                    </p>
                    <a
                        href="{{ path('items_list', {
                            ('categories'|trans({}, 'navigation')):
                            ('fitness'|trans({}, 'navigation'))
                        }) }}">
                        <img src="{{ asset('/images/fitness.jpg') }}" alt="">
                    </a>
                </div>
                <div class="col-md-15">
                    <div class="row ml-0 mr-0 no-gutters">
                        <div class="col-md-12 mb-2 item1">
                            <p>
                                {{ 'tennis'|trans({}, 'homepage')}}
                            </p>
                            <a
                                href="{{ path('items_list', {
                                    ('categories'|trans({}, 'navigation')):
                                    ('tennis'|trans({}, 'navigation'))
                                }) }}">
                                <img src="{{ asset('/images/Tennis.jpg') }}" alt="">
                            </a>
                        </div>
                        <div class="col-md-12 mb-2 item2">
                            <p>
                                {{ 'tableTennis'|trans({}, 'homepage')}}
                            </p>
                            <a
                                href="{{ path('items_list', {
                                    ('categories'|trans({}, 'navigation')):
                                    ('tableTennis'|trans({}, 'navigation'))
                                }) }}">
                                <img src="{{ asset('/images/Table tennis.jpg') }}" alt="">
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}

{% set terms_label %}
    <a title="{{ 'form.termsOfUseTitle'|trans({}, 'register')}}"
            href="{{ path('terms_and_conditions') }}">
        {{ 'form.termsOfUse'|trans({}, 'register')}}
    </a>
{% endset %}

{{ form_start(form) }}
    <div class="row">
        <div class="col-sm-6">
            {{ form_row(form.name) }}
        </div>
        <div class="col-sm-6">
            {{ form_row(form.surname) }}
        </div>
        <div class="col-sm-6">
            {{ form_row(form.gender) }}
        </div>
        <div class="col-sm-6">
            {{ form_row(form.birthDate) }}
        </div>
    </div>
    {{ form_rest(form) }}
    {% if prominentCategories|length != 0 %}
        <h6>
            {{ 'edit.already_selected_prominent_categories'|trans({}, 'user')}}
            :
        </h6>
        {% for prominentCategory in prominentCategories %}
            <span id="prominent_category">
                {{ prominentCategory.category.name }}
            </span>
            <br>
        {% endfor %}
        <hr>
        <a href="{{ path('reset_prominent_categories', {id: user.id}) }}">
            {{ 'edit.cancel_prominent_categories'|trans({}, 'user')}}
        </a>
    {% endif %}
    <div class="mb-2">
        <small class="text-muted mb-2">
            {{ 'form.help.termsOfUse'|trans({}, 'register')}}
            <a href="{{ path('terms_and_conditions') }}"
               target="_blank">{{ 'form.help.termsOfUseLink'|trans({}, 'register')}}
            </a>.
        </small>
    </div>
    <div class="text-center">
        <button class="btn btn-success mb-3">
            {{ button_label|default('form.registerButton'|trans({}, 'register')) }}
        </button>
    </div>
{{ form_end(form) }}

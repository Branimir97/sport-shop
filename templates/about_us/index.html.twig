{% extends 'base.html.twig' %}

{% block title %}{{ 'title'|trans({}, 'about_us')}}{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/about_us.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-2 bg-light p-2">
            {{ 'title'|trans({}, 'about_us')}}
            <img id="icon_about-us" class="ml-1"
                 src="{{ asset('icons/about_us.png') }}" alt="icon">
        </h2>
        <div class="row mb-3 text-center">
            <div class="col-sm-6 mb-3">
                <h6 class="p-1">
                    <i class="fas fa-street-view"></i>
                    <b>{{ 'locationTitle'|trans({}, 'about_us')}}</b>
                </h6>
                <p class="bg-light p-1">
                    Ulica Kneza Trpimira 2B, 31000 Osijek
                </p>
                <h6 class="p-1">
                    <i class="fas fa-file-contract"></i>
                    <b>{{ 'companyNameTitle'|trans({}, 'about_us')}}</b>
                </h6>
                <p class="bg-light p-1">
                    SportShop d.o.o.
                </p>
                <h6 class="p-1">
                    <i class="fas fa-file-contract"></i>
                    <b>{{ 'emailAddressTitle'|trans({}, 'about_us')}}</b>
                </h6>
                <p class="bg-light p-1">
                    support@sport-shop.xyz
                </p>
            </div>
            <div class="col-sm-6 mb-3">
                <div class="map">
                    <iframe width="420"
                            height="300"
                            frameborder="0"
                            scrolling="no"
                            marginheight="0"
                            marginwidth="0"
                            id="gmap_canvas"
                            src="https://maps.google.com/maps?width=520&amp;
                            height=400&amp;hl=en&amp;q=Ulica%20Kneza%20Trpimira%202b%20Osijek+()&amp;
                            t=&amp;z=14&amp;ie=UTF8&amp;iwloc=B&amp;output=embed">
                    </iframe>
                    <a href='https://www.symptoma.hr/hr/info/covid-19#info'>
                        COVID-19
                    </a>
                    <script type='text/javascript'
                            src='https://embedmaps.com/google-maps-authorization/script.js?
                            id=8a3df4aec8b2af26fcb590b8aa6761a07acaf5b2'>
                    </script>
                </div>
            </div>
            <div class="col-sm-1"></div>
            <div class="col-sm-4">
                <div class="card">
                    <p class="p-2">
                        {{ 'textSection1'|trans({}, 'about_us')}}
                    </p>
                </div>
            </div>
            <div class="col-sm-2">
                <div class="img-wrapper m-auto">
                    <img id="logo" src="{{ asset('images/logo.png') }}" alt="">
                </div>
            </div>
            <div class="col-sm-5">
                <div class="card">
                    <p class="p-2">
                        {{ 'textSection2'|trans({}, 'about_us')}}
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

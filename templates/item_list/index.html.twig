{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title'|trans({}, 'item_list') }}
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/items_list.css') }}">
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h2 class="text-center mt-2 bg-light p-2">
            {{ 'title'|trans({}, 'item_list') }}
        </h2>
        <div class="row">
            <div class="col-sm-3 mb-2">
                <div class="one_item">
                    <div class="img-wrapper">
                        <div class="new_badge p-1">
                            {{ 'new'|trans({}, 'item_list') }}
                        </div>
                        <div class="action_badge p-1">
                            -33%
                        </div>
                        <img src="{{ asset('images/fitness.jpg') }}" alt="">
                    </div>
                    <div class="overlay">
                        <a href="#" class="icon_wish_list"
                           title="{{ 'addToWishListTitle'|trans({}, 'item_list') }}">
                            <i class="fas fa-clipboard-check"></i>
                        </a>
                        <a href="#" class="icon_details"
                           title="{{ 'detailsTitle'|trans({}, 'item_list') }}">
                            <i class="fas fa-info-circle"></i>
                        </a>
                    </div>
                    <div class="item_info">
                        <h6 class="text-center bg-light p-1 mb-0">
                            Nike airmax
                        </h6>
                        <p class="text-muted text-center colors m-0 p-1">
                            {{ 'availableColors'|trans({}, 'item_list') }}
                        </p>
                        <div class="item-colors text-center">
                            <a id="color" style="background-color: #1c9deb"></a>
                            <a id="color" style="background-color: red"></a>
                            <a id="color" style="background-color: yellow"></a>
                            <a id="color" style="background-color: #1c9deb"></a>
                            <a id="color" style="background-color: #1c9deb"></a>
                        </div>
                        <h6 id="price" class="text-center p-1 bg-success text-white">
                            {{ 'price'|trans({}, 'item_list') }}:
                            <span>
                                555 kn
                            </span>
                        </h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

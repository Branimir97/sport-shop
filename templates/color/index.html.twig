{% extends 'base.html.twig' %}

{% block title %}Upravljanje bojama{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("css/color_circle50.css") }}">
{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-2 bg-light p-2">Upravljanje bojama</h2>
        {% if not colors %}
            <div class="text-center">
                <img src="{{ asset('images/logo.png') }}" alt="">
                <p>Ne postoji niti jedna boja u bazi podataka.</p>
                <a href="{{ path('color_new') }}" class="btn btn-outline-info mb-3">Dodaj novu boju</a>
            </div>
        {% else %}
        <a href="{{ path('color_new') }}" class="btn btn-outline-info mb-3">Dodaj novu boju</a>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Boja</th>
                    <th>Kod boje</th>
                    <th>Vrijeme stvaranja</th>
                    <th>Vrijeme zadnje izmjene</th>
                    <th>Mogućnosti</th>
                </tr>
            </thead>
            <tbody>
            {% for color in colors %}
                <tr>
                    <td>{{ color.id }}</td>
                    <td>
                        <div class="circle_wrapper">
                            <div class="circle" style="background-color: {{ color.value }}"></div>
                        </div>
                    </td>
                    <td>{{ color.value }}</td>
                    <td>{{ color.createdAt|date('H:i:s | d.m.Y.') }}</td>
                    <td>{{ color.updatedAt ? color.updatedAt|date('H:i:s | d.m.Y.') : '' }}</td>
                    <td>
                        <a class="btn" href="{{ path('color_show', {'id': color.id}) }}" title="Prikaži pojedinosti">
                            <i class="fas fa-info-circle"></i>
                        </a>
                        <a href="{{ path('color_edit', {'id': color.id}) }}" title="Uredi">
                            <i class="fas fa-edit"></i>
                        </a>
                        {{ include('color/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {% endif %}
    </div>
{% endblock %}

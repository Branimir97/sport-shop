{% extends 'base.html.twig' %}

{% block title %}{{ color.name }} boja{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("css/color_circle75.css") }}">
{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-2 bg-light p-2">Kod boje: {{ color.value }}</h2>
        <div class="circle_wrapper">
            <div class="circle" style="background-color: {{ color.value }}"></div>
        </div>
        <a href="{{ path('color_index') }}">
            <i class="fas fa-arrow-alt-circle-left"></i>
            Lista boja
        </a>
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ color.id }}</td>
                </tr>
                <tr>
                    <th>Kod boje</th>
                    <td>{{ color.value }}</td>
                </tr>
                <tr>
                    <th>Naziv boje</th>
                    <td>{{ color.name }}</td>
                </tr>
                <tr>
                    <th>Vrijeme stvaranja</th>
                    <td>{{ color.createdAt|date('H:i:s | d.m.Y.') }}</td>
                </tr>
                <tr>
                    <th>Vrijeme zadnje izmjene</th>
                    <td>{{ color.updatedAt ? color.updatedAt|date('H:i:s | d.m.Y.') : '' }}</td>
                </tr>
            </tbody>
        </table>
        <div class="text-center">
            <a class="btn btn-outline-success" href="{{ path('color_edit', {'id': color.id}) }}">Uredi podatke</a>
            {{ include('color/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}
    {{ color.name }}
    {{ 'show.title'|trans({}, 'color') }}
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("css/color_circle75.css") }}">
{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-2 bg-light p-2">
            {{ color.name }}
            {{ 'show.title'|trans({}, 'color') }}
        </h2>
        <div class="circle_wrapper">
            <div class="circle"
                 style="background-color: {{ color.value }}">
            </div>
        </div>
        <a href="{{ path('color_index') }}">
            <i class="fas fa-arrow-alt-circle-left"></i>
            {{ 'colorsList'|trans({}, 'color') }}
        </a>
        <table class="table">
            <tbody>
                <tr>
                    <th>
                        Id
                    </th>
                    <td>{{ color.id }}</td>
                </tr>
                <tr>
                    <th>
                        {{ 'colorsTable.code'|trans({}, 'color') }}
                    </th>
                    <td>{{ color.value }}</td>
                </tr>
                <tr>
                    <th>
                        {{ 'colorsTable.name'|trans({}, 'color') }}
                    </th>
                    <td>{{ color.name }}</td>
                </tr>
                <tr>
                    <th>
                        {{ 'colorsTable.createdAt'|trans({}, 'color') }}
                    </th>
                    <td>{{ color.createdAt|date('H:i:s | d.m.Y.') }}</td>
                </tr>
                <tr>
                    <th>
                        {{ 'colorsTable.updatedAt'|trans({}, 'color') }}
                    </th>
                    <td>
                        {{ color.updatedAt ?
                        color.updatedAt|date('H:i:s | d.m.Y.') : '' }}
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="text-center">
            <a class="btn btn-outline-success"
               href="{{ path('color_edit', {'id': color.id}) }}">
                {{ 'show.editColor'|trans({}, 'color') }}
            </a>
            {{ include('color/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}

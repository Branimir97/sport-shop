{% extends 'base.html.twig' %}

{% block title %}Color{% endblock %}

{% block body %}
    <h1>Color</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ color.id }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ color.value }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ color.createdAt ? color.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ color.updatedAt ? color.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('color_index') }}">
        <i class="fas fa-arrow-alt-circle-left"></i>
        Nazad na listu boja
    </a>

    <div class="text-center">
        <a class="btn btn-outline-success" href="{{ path('color_edit', {'id': color.id}) }}">Uredi podatke</a>

        {{ include('color/_delete_form.html.twig') }}
    </div>
{% endblock %}

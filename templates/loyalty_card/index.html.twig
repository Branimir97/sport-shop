{% extends 'base.html.twig' %}

{% block title %}Upravljanje loyalty karticama{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-2 bg-light p-2">Upravljanje loyalty karticama</h2>
        {% if not loyalty_cards %}
            <div class="text-center">
                <img src="{{ asset('images/logo.png') }}" alt="">
                <p>Ne postoji niti jedna loyalty kartica u bazi podataka.</p>
                <a href="{{ path('loyalty_card_new_admin') }}" class="btn btn-outline-info mb-3">Dodaj novu loyalty karticu</a>
            </div>
        {% else %}
            <a href="{{ path('loyalty_card_new_admin') }}" class="btn btn-outline-info mb-3">Stvori novu loyalty karticu</a>
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Broj kartice</th>
                        <th>Korisnik</th>
                        <th>Bodovi</th>
                        <th>Vrijeme stvaranja</th>
                        <th>Vrijeme zadnje izmjene</th>
                        <th>Mogućnosti</th>
                    </tr>
                </thead>
                <tbody>
                {% for loyalty_card in loyalty_cards %}
                    <tr>
                        <td>{{ loyalty_card.id }}</td>
                        <td>{{ loyalty_card.number }}</td>
                        <td>{{ loyalty_card.user.name }} {{ loyalty_card.user.surname }}</td>
                        <td>{{ loyalty_card.credits }}</td>
                        <td>{{ loyalty_card.createdAt ? loyalty_card.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ loyalty_card.updatedAt ? loyalty_card.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>
                            <a href="{{ path('loyalty_card_show', {'id': loyalty_card.id}) }}" title="Prikaži pojedinosti">
                                <i class="fas fa-info-circle"></i>
                            </a>
                            <a href="{{ path('loyalty_card_edit', {'id': loyalty_card.id}) }}" title="Uredi">
                                <i class="fas fa-edit"></i>
                            </a>
                            {{ include('loyalty_card/_delete_form.html.twig') }}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </div>
{% endblock %}

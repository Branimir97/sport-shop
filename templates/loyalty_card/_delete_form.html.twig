<form method="post" action="{{ path('loyalty_card_delete', {'id': loyalty_card.id}) }}"
      onsubmit="return confirm('{{ 'delete_confirmation.message'|trans({}, 'loyalty_card') }}');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ loyalty_card.id) }}">
    <button class="btn btn-outline-danger mb-3 mt-2">
        {{ 'loyaltyCardTable.delete'|trans({}, 'loyalty_card') }}
    </button>
</form>

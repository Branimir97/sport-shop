{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title'|trans({}, 'search') }}
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/items_list.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-2 bg-light p-2">
            {{ 'title'|trans({}, 'search') }}
            <i class="fas fa-search"></i>
        </h2>
        {% if searchResults|length == 0 %}
            <h6 class="text-center bg-info p-2 text-white">
                {{ 'noSearchResults'|trans({}, 'search') }}
                (
                <strong>
                    {{ searchKeyword }}
                </strong>
                ).
            </h6>
        {% else %}
            <h6 class="text-center bg-success p-2 text-white">
                {{ 'numberOfResults'|trans({}, 'search') }}
                (
                <strong>
                    {{ searchKeyword }}
                </strong>
                ):
                <strong>
                    {{ searchResults|length }}
                </strong>
            </h6>
            <div class="row">
                {% for item in searchResults %}
                    <div class="col-sm-3 mb-2">
                        <div class="one_item">
                            <div class="img-wrapper">
                                {% set difference = date(item.createdAt|date('Y/m/d')).diff(date('now'|date('Y/m/d'))) %}
                                {% set daysDiff = difference.days %}
                                {% if daysDiff <= 2 %}
                                    <div class="new_badge p-1">
                                        {{ 'new'|trans({}, 'item_list') }}
                                    </div>
                                {% endif %}
                                {% set loopIndex = loop.index %}
                                    <div class="action_badge p-1">
                                        - 2
                                    </div>
                                {% if item.images|length == 0 %}
                                    <img src="{{ asset('images/logo.png') }}" alt="item_image">
                                {% else %}
                                    <img src="{{ asset('uploads/')~item.images[0].path }}" alt="item_image">
                                {% endif %}
                            </div>
                            <div class="overlay">
                                <a href="{{ path('wish_list_item_new', {'id':item.id}) }}"
                                   class="icon_wish_list"
                                   title="{{ 'addToWishListTitle'|trans({}, 'item_list') }}">
                                    <i class="fas fa-clipboard-check"></i>
                                </a>
                                <a href="{{ path('item_details', {'id':item.id}) }}"
                                   class="icon_details"
                                   title="{{ 'detailsTitle'|trans({}, 'item_list') }}">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                            </div>
                            <div class="item_info">
                                <h6 class="text-center bg-light p-1 mb-0">
                                    {{ item.title }}
                                </h6>
                                <p class="text-muted text-center colors m-0 p-1">
                                    {{ 'availableColors'|trans({}, 'item_list') }}
                                </p>
                                <div class="item-colors text-center">
                                    {% if item.itemColors|length == 0 %}
                                        <small>
                                            {{ 'colorsNotDefined'|trans({}, 'item_list') }}
                                        </small>
                                    {% else %}
                                        {% for itemColor in item.itemColors %}
                                            <a id="color" style="background-color: {{ itemColor.color.value }}"></a>
                                        {% endfor %}
                                    {% endif %}
                                </div>
                                <h6 id="price" class="text-center p-1 bg-success text-white">
                                    {{ 'price'|trans({}, 'item_list') }}:
                                    <span>
                                            {{ item.price }} kn
                                    </span>
                                </h6>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}

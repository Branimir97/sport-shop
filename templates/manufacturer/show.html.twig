{% extends 'base.html.twig' %}

{% block title %}
    {{ 'show.title'|trans({}, 'manufacturer') }}
    {{ manufacturer.name }}
{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-2 bg-light p-2">
            {{ 'show.title'|trans({}, 'manufacturer') }}
            {{ manufacturer.name }}
        </h2>
        <a href="{{ path('manufacturer_index') }}">
            <i class="fas fa-arrow-alt-circle-left"></i>
            {{ 'manufacturerList'|trans({}, 'manufacturer') }}
        </a>
        <table class="table">
            <tbody>
            <tr>
                <th>
                    Id
                </th>
                <td>{{ manufacturer.id }}</td>
            </tr>
            <tr>
                <th>
                    {{ 'manufacturerTable.manufacturer'|trans({}, 'manufacturer') }}
                </th>
                <td>{{ manufacturer.name }}</td>
            </tr>
            <tr>
                <th>
                    {{ 'manufacturerTable.createdAt'|trans({}, 'manufacturer') }}
                </th>
                <td>
                    {{ manufacturer.createdAt|date('H:i:s | d.m.Y.') }}
                </td>
            </tr>
            <tr>
                <th>
                    {{ 'manufacturerTable.updatedAt'|trans({}, 'manufacturer') }}
                </th>
                <td>
                    {{ manufacturer.updatedAt ?
                    manufacturer.updatedAt|date('H:i:s | d.m.Y.') : '' }}
                </td>
            </tr>
            </tbody>
        </table>
        <div class="text-center">
            <a class="btn btn-outline-success"
               href="{{ path('manufacturer_edit', {'id': manufacturer.id}) }}">
                {{ 'show.editManufacturer'|trans({}, 'manufacturer') }}
            </a>
            {{ include('manufacturer/_delete_form.html.twig')}}
        </div>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Upravljanje proizvođačima{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-2 bg-light p-2">Upravljanje proizvođačima</h2>
        {% if not manufacturers %}
            <div class="text-center">
                <img src="{{ asset('images/logo.png') }}" alt="">
                <p>Ne postoji niti jedan proizvođač u bazi podataka.</p>
                <a href="{{ path('manufacturer_new') }}" class="btn btn-outline-info mb-3">
                    Dodaj novog proizvođača
                </a>
            </div>
        {% else %}
            <a href="{{ path('manufacturer_new') }}" class="btn btn-outline-info mb-3">
                Dodaj novog proizvođača
            </a>
            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Proizvođač</th>
                    <th>Vrijeme stvaranja</th>
                    <th>Vrijeme zadnje izmjene</th>
                    <th>Mogućnosti</th>
                </tr>
                </thead>
                <tbody>
                {% for manufacturer in manufacturers %}
                    <tr>
                        <td>{{ manufacturer.id }}</td>
                        <td>{{ manufacturer.name }}</td>
                        <td>{{ manufacturer.createdAt|date('H:i:s | d.m.Y.') }}</td>
                        <td>{{ manufacturer.updatedAt ? manufacturer.updatedAt|date('H:i:s | d.m.Y.') : '' }}</td>
                        <td>
                            <a class="btn" href="{{ path('manufacturer_show', {'id': manufacturer.id}) }}" title="Prikaži pojedinosti">
                                <i class="fas fa-info-circle"></i>
                            </a>
                            <a href="{{ path('manufacturer_edit', {'id': manufacturer.id}) }}" title="Uredi">
                                <i class="fas fa-edit"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </div>
{% endblock %}

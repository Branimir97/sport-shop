{% extends 'base.html.twig' %}

{% block title %}
    {{ 'show.title'|trans({}, 'manufacturer') }}
    - {{ manufacturer.name }}
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("css/container50.css") }}">
{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-2 bg-light p-2">
            {{ 'show.title'|trans({}, 'manufacturer') }}
            - {{ manufacturer.name }}
        </h2>
        <a href="{{ path('manufacturer_index') }}">
            <i class="fas fa-arrow-alt-circle-left"></i>
            {{ 'manufacturerList'|trans({}, 'manufacturer') }}
        </a>
        {{ include('manufacturer/_form.html.twig', {'button_label': 'Spremi promjene'}) }}
        <div class="text-center">
            {{ include('manufacturer/_delete_form.html.twig') }}
        </div>
    </div>

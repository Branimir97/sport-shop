<!doctype html>
<html lang="{{ app.request.locale }}">
<head>

    <style>
        .img_wrapper {
            text-align: center;
        }
        .img_wrapper img{
            border: 1px dot-dash wheat;
        }

        .heading {
            text-align: center;
            background-color: #19D895;
            color: white;
            padding: 1%;
            margin-top: 5px;
        }

        .heading > .promoCode {
            color: white;

        }

        .messages {
            margin-top: 5px;
            text-align: center;
        }

        .messages > .promoCode {
            color: green;

        }

        .discount {
            color: red;
        }

        .footer {
            color: #19D895;
            text-align: center;
        }
    </style>
    <title></title>
</head>
<body>
    <div class="img_wrapper">
        <img src="https://i.ibb.co/yPhPY0j/logo.png" alt="logo">
    </div>
    <div>
        <h2 class="heading">
            {{ 'new_promo_code.title'|trans({}, 'email') }}
            - <strong class="promoCode">{{ promoCode }}</strong>
        </h2>
        <h3 class="messages">
            {{ 'new_promo_code.respected'|trans({}, 'email') }},
            <br><br>
            {{ 'new_promo_code.message1'|trans({}, 'email') }}
            <strong class="promoCode">{{ promoCode }}</strong>
            {{ 'new_promo_code.message2'|trans({}, 'email') }}
            <strong class="discount">{{ discountPercentage }}%</strong>
            {{ 'new_promo_code.message3'|trans({}, 'email') }}
            <br><br>
            {{ 'notice'|trans({}, 'email') }}
        </h3>
    </div>
    <div class="footer">
        <small>
            {{ 'footer1'|trans({}, 'email') }}
            <br>
            {{ 'footer2'|trans({}, 'email') }}
            <br>
            {{ 'footer3'|trans({}, 'email') }}
        </small>
    </div>
</body>
</html>

{% extends 'base.html.twig' %}

{% block title %}{{ item.title }}{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("css/item_details.css") }}">
    <link rel="stylesheet" href="{{ asset("css/color_circle50.css") }}">
{% endblock %}

{% block body %}
    <div class="container-fluid mt-1 mb-1 pl-0 pr-0">
        <div class="row ml-0 mr-0">
            <div class="col-md-6">
                <div id="carousel-item-info" class="carousel mt-1">
                    <div id="carouselExampleIndicators2" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            {% for i in 1..item.images|length %}
                                <li class="mr-1" data-target="#carouselExampleIndicators2" data-slide-to="{{ i }}"></li>
                            {% endfor %}
                        </ol>
                        <div class="carousel-inner">
                            {% for image in item.images %}
                                <div class="carousel-item">
                                    <img src="{{ asset('uploads/')~image.path }}" alt="First slide">
                                </div>
                            {% endfor %}
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators2" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators2" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mt-3">
                <h3 class="text-center bg-light p-1">{{ item.title }}</h3>
                <div class="category text-center">
                    <p>Kategorije artikla:
                        {% for itemCategory in item.itemCategories %}
                            <a href="#">{{ itemCategory.category.name }}</a>
                        {% endfor %}
                    </p>
                </div>
                <p>Šifra artikla: <span id="cipher">{{ item.cipher }}</span>
                    {% if is_granted("ROLE_USER") %}
                        <a id="wish_list" class="btn btn-primary text-white" href="{{ path('wish_list_item_new', {'id':item.id}) }}">
                            Dodaj na popis želja <i class="fas fa-list-ul"></i>
                        </a>
                    {% endif %}
                </p>
                <p>Proizvođač: <span id="manufacturer">{{ item.manufacturer.name }}</span></p>
                {% if is_granted("ROLE_USER") %}
                    {% if item.itemColors|length == 0 or item.itemSizes|length == 0 %}
                        <p class="bg-warning text-center p-1">
                            <i class="fas fa-exclamation-circle"></i>
                            Podaci o artiklu se ažuriraju, stoga ga nije moguće dodati u košaricu ili na popis želja!
                        </p>
                    {% endif %}
                    {{ include('cart/_form.html.twig') }}
                {% else %}
                    <h6 class="text-center bg-light p-1">Za dodavanje artikla u košaricu/listu želja potrebno je imati korisnički račun.</h6>
                    <div class="text-center mb-3">
                        <a class="text-center" href="{{ path('app_login') }}">Prijava/registracija</a>
                    </div>
                {% endif %}
                <h6 class="text-center">Cijena: <span id="price">{{ item.price }} kn</span> </h6>
                <p>Tagovi:
                    <span id="tag">
                        {% for itemTag in item.itemTags%}
                            #{{ itemTag.tag.name }}
                        {% endfor %}
                    </span>
                </p>
            </div>
        </div>

        <div class="row ml-0 mr-0">
            <div class="col-md-6 mt-1">
                <h3 class="text-center bg-light p-1">Opis artikla</h3>
                {{ item.description|raw }}
            </div>
            <div class="col-md-6 mt-1 mb-2">
                <h3 class="text-center bg-light p-1">Recenzije</h3>
                {% if app.user %}
                    {{ include('item/new_review_form_modal.html.twig') }}
                {% endif %}
                {% if item.reviews|length == 0 %}
                    <p class="text-center">Trenutno nitko nije napisao niti jednu recenziju za ovaj artikl.</p>
                {% else %}
                    <div class="reviews">
                        <div class="row justify-content-md-center ml-1 mr-1 mt-3">
                            {% for review in item.reviews|reverse %}
                                <div class="col-sm-11 one-review mb-2">
                                    <div id="edit_icon">
                                        {% if app.user == review.user or is_granted("ROLE_ADMIN") %}
                                            <a href="{{ path('review_edit', {id: review.id}) }}"
                                               title="Uredi recenziju">
                                                <i class="far fa-edit"></i>
                                            </a>
                                        {% endif %}
                                    </div>
                                    <h6 class="p-1 border-bottom">
                                        <span class="mr-1">Autor:</span> {{ review.user.name }} {{ review.user.surname }}
                                    </h6>
                                    <h6 class="p-1 border-bottom">
                                        <span>Ocjena</span>
                                        {% for i in 1..review.rating %}
                                            <span class="fa fa-star checked"></span>
                                        {% endfor %}
                                        {% if review.rating < 5 %}
                                            {% for i in review.rating .. 4%}
                                                <span id="unchecked" class="fa fa-star"></span>
                                            {% endfor %}
                                        {% endif %}
                                    </h6>
                                    <p><span>Komentar:</span> <br>{{ review.comment }}</p>
                                    <p class="text-right">Objavljeno: {{ review.createdAt|date('H:i:s | d.m.Y.') }}</p>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
        <h3 class="text-center bg-light p-1 mt-3 ml-5 mr-5">Slični artikli</h3>
        <div class="row ml-0 mr-0">
            <div class="col-sm-3"></div>
            <div class="col-sm-3"></div>
            <div class="col-sm-3"></div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
        $(document).ready(function () {
            $('.carousel-indicators li:first-child').addClass('active')
            $('.carousel-item:first-child').addClass('active')
        })
    </script>
{% endblock %}

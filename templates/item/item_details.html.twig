{% extends 'base.html.twig' %}

{% block title %}{{ item.title }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("css/item_details.css") }}">
{% endblock %}

{% block body %}
    <div class="container-fluid mt-1 mb-1 pl-0 pr-0">
        <div class="row ml-0 mr-0">
            <div class="col-md-6">
                <div id="carousel-item-info" class="carousel mt-1">
                    <div id="carouselExampleIndicators2" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li class="mr-1" data-target="#carouselExampleIndicators2" data-slide-to="0"></li>
                            <li class="mr-1" data-target="#carouselExampleIndicators2" data-slide-to="1"></li>
                            <li class="mr-1" data-target="#carouselExampleIndicators2" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="/images/socks1.jpg" alt="First slide">
                            </div>
                            <div class="carousel-item">
                                <img src="/images/socks2.jpg" alt="Second slide">
                            </div>
                            <div class="carousel-item">
                                <img src="/images/socks3.jpg" alt="Third slide">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators2" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators2" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mt-3">
            </div>
        </div>

        <div class="row ml-0 mr-0">
            <div class="col-md-6 mt-3">
                <h3 class="text-center bg-light p-1">Opis artikla</h3>
                {{ item.description|raw }}
            </div>
            <div class="col-md-6 mt-3 mb-2">
                <h3 class="text-center bg-light p-1">Recenzije</h3>
                {% if app.user %}
                    {{ include('item/new_review_form_modal.html.twig') }}
                {% endif %}
                {% if item.reviews|length == 0 %}
                    <p class="text-center">Trenutno nitko nije napisao niti jednu recenziju za ovaj artikl.</p>
                {% else %}
                    <div class="row justify-content-md-center ml-1 mr-1 reviews">
                        {% for review in item.reviews|reverse %}
                            <div class="col-sm-11 one-review mb-2">
                                <div id="edit_icon">
                                    <a href="#" title="Uredi recenziju">
                                        <i class="far fa-edit"></i>
                                    </a>
                                </div>
                                <h6 class="p-1 border-bottom">
                                    <span class="mr-1">Autor:</span> {{ review.user.name }} {{ review.user.surname }}
                                </h6>
                                <h6 class="p-1 border-bottom">
                                    <span>Ocjena</span>
                                    {% for i in 1..review.rating %}
                                        <span class="fa fa-star checked"></span>
                                    {% endfor %}
                                    {% if review.rating < 5 %}
                                        {% for i in review.rating .. 4%}
                                            <span id="unchecked" class="fa fa-star"></span>
                                        {% endfor %}
                                    {% endif %}
                                </h6>
                                <p><span>Komentar:</span> <br>{{ review.comment }}</p>
                                <p class="text-right">Objavljeno: {{ review.createdAt|date('H:i:s | d.m.Y.') }}</p>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
        <h3 class="text-center bg-light p-1 mt-3 ml-5 mr-5">Sliƒçni artikli</h3>
        <div class="row ml-0 mr-0">
            <div class="col-sm-3"></div>
            <div class="col-sm-3"></div>
            <div class="col-sm-3"></div>
        </div>
    </div>
{% endblock %}

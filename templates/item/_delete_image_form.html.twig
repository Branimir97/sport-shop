<form method="post" action="{{ path('item_image_delete', {'id': image.id}) }}"
      onsubmit="return confirm('{{ 'delete_confirmation.image.message'|trans({}, 'item') }}');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ image.id) }}">
    <button>
        <i class="far fa-trash-alt p-1"
               title="{{ 'edit.deleteItemImage'|trans({}, 'item') }}">
        </i>
    </button>
</form>
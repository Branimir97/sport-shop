{% extends 'base.html.twig' %}

{% block title %}
    {{ 'set_size_quantity.title'|trans({}, 'item') }}
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/container40.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-2 bg-light p-2">
            {{ 'set_size_quantity.title'|trans({}, 'item') }}
        </h2>
        <a href="{{ path('item_add_size', {'id':item.id}) }}">
            <i class="fas fa-arrow-alt-circle-left"></i>
            {{ 'set_size_quantity.newSizes'|trans({}, 'item') }}
        </a>
        <p class="bg-danger text-white p-2 text-center">
            <i class="fas fa-exclamation-circle"></i>
            {{ 'set_size_quantity.warningMessage'|trans({}, 'item') }}
        </p>
        {{ include('item/set_size_quantity_form.html.twig') }}
    </div>
{% endblock %}

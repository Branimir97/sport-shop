{% extends 'base.html.twig' %}

{% block title %}Postavljanje novih fotografija{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/container40.css') }}">
    <link rel="stylesheet" href="{{ asset('css/add_item_image.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-2 bg-light p-2">
            Postavljanje novih fotografija
        </h2>
        <a href="{{ path('item_edit', {'id':item.id}) }}">
            <i class="fas fa-arrow-alt-circle-left"></i>
            UreÄ‘ivanje artikla
        </a>
        <h6 class="text-center bg-light p-1">
            Artikl:
        </h6>
        <p class="text-center" id="title">
            {{ item.title }}
        </p>
        {% if item.images|length == 0 %}
            <p class="text-center">
                Artikl trenutno nema niti jednu fotografiju.
            </p>
        {% else %}
            <h6 class="text-center bg-light p-1">
                Trenutno postavljena/e fotografija/e:
            </h6>
            <div class="row">
            {% for image in item.images %}
                    <div class="col-sm-3 mb-3">
                        <div class="image-wrapper">
                            <img src="{{ asset('uploads/')~image.path }}"
                                 alt="image_{{ image.id }}">
                        </div>
                    </div>
            {% endfor %}
            </div>
        {% endif %}
        {{ include('item/new_image_form.html.twig') }}
    </div>
{% endblock %}

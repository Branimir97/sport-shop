<form method="post" action="{{ path('item_category_delete', {'id': itemCategory.id}) }}"
      onsubmit="return confirm('Jeste li sigurni da želite obrisati ovu fotografiju?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ itemCategory.id) }}">
    <button><i class="far fa-trash-alt p-1" title="Obriši fotografiju"></i></button>
</form>
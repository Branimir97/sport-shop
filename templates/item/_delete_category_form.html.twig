<form method="post" action="{{ path('item_category_delete', {'id': itemCategory.id}) }}"
      onsubmit="return confirm('{{ 'delete_confirmation.category.message'|trans({}, 'item') }}');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ itemCategory.id) }}">
    <button>
        <i id="delete" class="far fa-trash-alt"
           title="{{ 'edit.deleteItemCategory'|trans({}, 'item') }}">
        </i>
    </button>
</form>
{% extends 'base.html.twig' %}

{% block title %}
    {{ 'show.title'|trans({}, 'promo_code') }}
    "{{ promo_code.code }}"
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("css/container50.css") }}">
{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center p-2 mt-2 bg-light">
            {{ 'show.title'|trans({}, 'promo_code') }}
            "{{ promo_code.code }}"
        </h2>
        <a href="{{ path('promo_code_index') }}">
            <i class="fas fa-arrow-alt-circle-left"></i>
            {{ 'promoCodesList'|trans({}, 'promo_code') }}
        </a>
        {{ include('promo_code/_form.html.twig', {'button_label': 'Spremi promjene'}) }}
        <div class="text-center">
            {{ include('promo_code/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}

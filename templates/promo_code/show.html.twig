{% extends 'base.html.twig' %}

{% block title %}PromoCode{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-2 bg-light p-2">Promo kod "{{ promo_code.code }}"</h2>
        <a href="{{ path('promo_code_index') }}">
            <i class="fas fa-arrow-alt-circle-left"></i>
            Lista promo kodova
        </a>
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ promo_code.id }}</td>
                </tr>
                <tr>
                    <th>Promo kod</th>
                    <td>{{ promo_code.code }}</td>
                </tr>
                <tr>
                    <th>Postotak popusta</th>
                    <td>{{ promo_code.discountPercentage }}</td>
                </tr>
                <tr>
                    <th>Vrijeme isteka koda</th>
                    <td>{{ promo_code.endDate ? promo_code.endDate|date('H:i:s | d.m.Y.') : '' }}</td>
                </tr>
                <tr>
                    <th>Vrijeme stvaranja</th>
                    <td>{{ promo_code.createdAt|date('H:i:s | d.m.Y.')}}</td>
                </tr>
                <tr>
                    <th>Vrijeme zadnje izmjene</th>
                    <td>{{ promo_code.updatedAt ? promo_code.updatedAt|date('H:i:s | d.m.Y.') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <div class="text-center">
            <a class="btn btn-outline-success" href="{{ path('promo_code_edit', {'id': promo_code.id}) }}">Uredi podatke</a>
            {{ include('promo_code/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Moja košarica{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("css/cart_wish_list.css") }}">
    <link rel="stylesheet" href="{{ asset("css/color_circle50.css") }}">
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h2 class="text-center mt-2 bg-light p-2">Moja košarica <i id="cart" class="fas fa-shopping-cart"></i></h2>
        {% if cart.cartItems is not defined or cart.cartItems|length == 0 %}
            <h6 class="text-center bg-danger p-2 text-white">Ne postoji niti jedan artikl u Vašoj košarici.</h6>
            <p class="text-center">ps. Kreni u shopping!</p>
        {% else %}
            <table class="table">
                <thead>
                <tr>
                    <th>Slika artikla</th>
                    <th>Naziv artikla</th>
                    <th>Veličina</th>
                    <th>Boja</th>
                    <th>Količina</th>
                    <th>Cijena [kn]</th>
                    <th>Ukupna cijena [kn]</th>
                    <th>Obriši artikl</th>
                </tr>
                </thead>
                <tbody>
                {% for cartItem in cart.cartItems %}
                    <tr>
                        <td>
                            <img class="item_img" src="{{ asset('uploads/')~cartItem.item.images[0].path }}" alt="image_{{ cartItem.item.images[0].id }}">
                        </td>
                        <td>
                            {{ cartItem.item.title }}
                        </td>
                        <td>
                            {{ cartItem.size.value }}
                        </td>
                        <td>
                            <div class="circle_wrapper">
                                <div class="circle" style="background-color: {{ cartItem.color.value }}"></div>
                            </div>
                        </td>
                        <td>
                            {{ cartItem.quantity }}
                        </td>
                        <td>
                            {{ cartItem.item.price|number_format(2, '.', ',') }}
                        </td>
                        <td>
                            {{ (cartItem.item.price * cartItem.quantity)|number_format(2, '.', ',') }}
                        </td>
                        <td>
                            {{ include('cart/_delete_form.html.twig') }}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="text-right">
                <h5>Ukupna cijena artikala u košarici: <span id="price">{{ totalPrice|number_format(2, '.', ',') }}</span> kn</h5>
                <a class="btn btn-info text-white" href="{{ path('checkout') }}">
                    Plaćanje <i class="fab fa-paypal"></i>
                </a>
            </div>
        {% endif %}
    </div>
{% endblock %}

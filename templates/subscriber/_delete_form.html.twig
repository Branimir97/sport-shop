<form method="post" action="{{ path('subscriber_delete', {'id': subscriber.id}) }}"
      onsubmit="return confirm('{{ 'delete_confirmation.message'|trans({}, 'subscriber') }}');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ subscriber.id) }}">
    <button class="btn btn-danger mb-3 mt-2">
        {{ 'subscriberTable.remove'|trans({}, 'subscriber') }}
    </button>
</form>

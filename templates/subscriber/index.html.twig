{% extends 'base.html.twig' %}

{% block title %}Lista pretplaćenih korisnika{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-2 bg-light p-2">
            Lista pretplaćenih korisnika
            <img class="panel_icon ml-1"
                 src="{{ asset('icons/subscribe.png') }}" alt="icon">
        </h2>
        {% if not subscribers %}
            <div class="text-center">
                <img src="{{ asset('images/logo.png') }}" alt="">
                <p>
                    Ne postoji niti jedan pretplaćeni korisnik u bazi podataka.
                </p>
            </div>
        {% else %}
            <div class="table-responsive">
                <table class="table table-hover table-info">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Email korisnika</th>
                        <th>Vrijeme stvaranja</th>
                        <th>Vrijeme zadnje izmjene</th>
                        <th>Ukloni pretplatu</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for subscriber in subscribers %}
                        <tr>
                            <td>{{ subscriber.id }}</td>
                            <td>{{ subscriber.email }}</td>
                            <td>{{ subscriber.createdAt|date('H:i:s | d.m.Y.')}}</td>
                            <td>
                                {{ subscriber.updatedAt ? subscriber.updatedAt|date('H:i:s | d.m.Y.') : '' }}
                            </td>
                            <td>
                                {{ include('subscriber/_delete_form.html.twig') }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
{% endblock %}

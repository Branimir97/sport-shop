{% extends 'base.html.twig' %}

{% block title %}Uređivanje recenzije{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("css/container50.css") }}">
{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center p-2 mt-2 bg-light">Uređivanje recenzije</h2>
        {% if is_granted("ROLE_ADMIN") %}
            <a href="{{ path('review_index') }}">
                <i class="fas fa-arrow-alt-circle-left"></i>
                Lista recenzija
            </a>
        {% else %}
            <a href="{{ path('item_details', {id: review.item.id}) }}">
                <i class="fas fa-arrow-alt-circle-left"></i>
                {{ review.item.title }}
            </a>
        {% endif %}
        <div class="text-center">
            {{ include('review/_form.html.twig') }}
        </div>
        {% if app.user == review.user or is_granted("ROLE_ADMIN") %}
            <div class="text-center">
                {{ include('review/_delete_form.html.twig') }}
            </div>
        {% endif %}
    </div>
{% endblock %}

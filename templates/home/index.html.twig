{% extends 'base.html.twig' %}

{% block title %}Sport Shop{% endblock %}



{% block body %}
    <div class="container-fluid">
        <div class="inline-row-slider bg-danger p-3 text-center">
            <p>Inline row slider</p>
        </div>

        <div class="carousel mb-5">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li class="mr-1" data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li class="mr-1" data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li class="mr-1" data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="/images/football.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img src="/images/handball.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img src="/images/basketball.jpg" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

        <div class="row recommended-categories bg-primary text-center">
            <div class="col-md-15">
                <div class="row">
                    <div class="col-sm-12 group1">
                        <p>Nogomet</p>
                        <img src="/images/football.jpg" alt="">
                    </div>
                    <div class="col-sm-12 group2">
                        <p>Rukomet</p>
                        <img src="/images/handball.jpg" alt="">
                    </div>
                </div>
            </div>
            <div class="col-md-15">
                <p>Trčanje</p>
                <img src="/images/running.jpg" alt="">
            </div>
            <div class="col-md-15">
                <div class="row">
                    <div class="col-sm-12">
                        <p>Košarka</p>
                        <img src="/images/basketball.jpg" alt="">
                    </div>
                    <div class="col-sm-12">
                        <p>Odbojka</p>
                        <img src="/images/volleyball.jpg" alt="">
                    </div>
                </div>
            </div>
            <div class="col-md-15">
                <p>Fitness</p>
                <img src="/images/fitness.jpg" alt="">
            </div>
            <div class="col-md-15">
                <div class="row">
                    <div class="col-sm-12 image-wrapper">
                        <p>Tenis</p>
                        <img src="/images/tennis.jpg" alt="">
                    </div>
                    <div class="col-sm-12">
                        <p>Stolni tenis</p>
                        <img src="/images/table-tennis.jpg" alt="">
                    </div>
                </div>
            </div>
        </div>


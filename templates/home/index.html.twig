{% extends 'base.html.twig' %}

{% block title %}SportShop{% endblock %}

{% block body %}
    <div class="container-fluid mt-1 pl-0 pr-0">

        <div id="carousel-short-info" class="carousel bg-warning">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="7000">
                <div class="carousel-inner my-auto">
                    <div class="carousel-item active">
                        <p>Ovo je poruka#1.</p>
                    </div>
                    <div class="carousel-item">
                        <p>Ovo je poruka#2.</p>
                    </div>
                    <div class="carousel-item">
                        <p>Ovo je poruka#3.</p>
                    </div>
                </div>
            </div>
        </div>

        <div id="carousel-image-info" class="carousel mt-1">
            <div id="carouselExampleIndicators2" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li class="mr-1" data-target="#carouselExampleIndicators2" data-slide-to="0" class="active"></li>
                    <li class="mr-1" data-target="#carouselExampleIndicators2" data-slide-to="1"></li>
                    <li class="mr-1" data-target="#carouselExampleIndicators2" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="/images/football.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img src="/images/handball.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img src="/images/basketball.jpg" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators2" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators2" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

        <div class="row ml-0 mr-0 recommended-categories bg-info">
            <div class="col-sm-3">
                <p>Nogomet</p>
                <img src="/images/football.jpg" alt="">
            </div>
            <div class="col-sm-3">
                <p>Trčanje</p>
                <img src="/images/running.jpg" alt="">
            </div>
            <div class="col-sm-3">
                <p>Košarka</p>
                <img src="/images/basketball.jpg" alt="">
            </div>
            <div class="col-sm-3">
                <p>Fitness</p>
                <img src="/images/fitness.jpg" alt="">
            </div>
        </div>
    </div>

{% endblock %}

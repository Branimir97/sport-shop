{% extends 'base.html.twig' %}

{% block title %}SportShop{% endblock %}

{% block body %}
    <div class="container-fluid mt-1 pl-0 pr-0">

        <div id="carousel-short-info" class="carousel bg-secondary text-center">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="7000">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <h4 class="bg-secondary text-center mt-1 pt-1 text-white recommended-categories-title">Poruka#1</h4>
                    </div>
                    <div class="carousel-item">
                        <h4 class="bg-secondary text-center mt-1 pt-1 text-white recommended-categories-title">Poruka#2</h4>
                    </div>
                    <div class="carousel-item">
                        <h4 class="bg-secondary text-center mt-1 pt-1 text-white recommended-categories-title">Poruka#3</h4>
                    </div>
                </div>
            </div>
        </div>

        <div id="carousel-homepage-info" class="carousel mt-1">
            <div id="carouselExampleIndicators2" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li class="mr-1" data-target="#carouselExampleIndicators2" data-slide-to="0" class="active"></li>
                    <li class="mr-1" data-target="#carouselExampleIndicators2" data-slide-to="1"></li>
                    <li class="mr-1" data-target="#carouselExampleIndicators2" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="/images/football.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img src="/images/handball.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img src="/images/basketball.jpg" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators2" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators2" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

        <!--Kad je korisnik prijavljen, izlistavanje preporučenih kategorija-->
{#        <h4 class="bg-secondary text-center mt-1 pt-1 text-white recommended-categories-title">Preporučeni artikli</h4>#}

        <h4 class="bg-secondary text-center mt-1 pt-1 text-white top-categories-title">Istaknute kategorije</h4>
        <div class="row ml-0 mr-0 mt-1 top-categories">
            <div class="col-md-15">
                <div class="row ml-0 mr-0 no-gutters">
                    <div class="col-md-12 mb-2 item1">
                        <p>Nogomet</p>
                        <img src="/images/football.jpg" alt="">
                    </div>
                    <div class="col-md-12 mb-2 item2">
                        <p>Rukomet</p>
                        <img src="/images/handball.jpg" alt="">
                    </div>
                </div>
            </div>
            <div class="col-md-15 activity mb-2">
                <p>Trčanje</p>
                <img src="/images/running.jpg" alt="">
            </div>
            <div class="col-md-15">
                <div class="row ml-0 mr-0 no-gutters">
                    <div class="col-md-12 mb-2 item1">
                        <p>Košarka</p>
                        <img src="/images/basketball.jpg" alt="">
                    </div>
                    <div class="col-md-12 mb-2 item2">
                        <p>Odbojka</p>
                        <img src="/images/volleyball.jpg" alt="">
                    </div>
                </div>
            </div>
            <div class="col-md-15 activity mb-2">
                <p>Fitness</p>
                <img src="/images/fitness.jpg" alt="">
            </div>
            <div class="col-md-15">
                <div class="row ml-0 mr-0 no-gutters">
                    <div class="col-md-12 mb-2 item1">
                        <p>Tenis</p>
                        <img src="/images/tennis.jpg" alt="">
                    </div>
                    <div class="col-md-12 mb-2 item2">
                        <p>Stolni tenis</p>
                        <img src="/images/table-tennis.jpg" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

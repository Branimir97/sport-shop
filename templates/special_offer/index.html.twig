{% extends 'base.html.twig' %}

{% block title %}Akcijska ponuda{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h2 class="text-center mt-2 bg-light p-2">
            Akcijska ponuda artikala
            <img class="panel_icon ml-1"
                 src="{{ asset('icons/action.png') }}" alt="icon">
        </h2>
        {% if items|length == 0 %}
            <h6 class="text-center bg-danger p-2 text-white">
                Trenutno nemamo artikle u akcijskoj ponudi.
            </h6>
        {% else %}
            <div class="row">
                {% for item in items %}
                    <div class="col-sm-3 mb-2">
                        <div class="one_item">
                            <div class="img-wrapper">
                                <div class="new_badge p-1">
                                    NOVO
                                </div>
                                <div class="action_badge p-1">
                                    -33%
                                </div>
                                <img src="{{ asset('uploads/')~item.images[0].path }}" alt="item_image">
                            </div>
                            <div class="overlay">
                                <a href="{{ path('wish_list_item_new', {'id':item.id}) }}"
                                   class="icon_wish_list" title="Dodaj na popis Å¾elja">
                                    <i class="fas fa-clipboard-check"></i>
                                </a>
                                <a href="{{ path('item_details', {'id':item.id}) }}"
                                   class="icon_details" title="Detalji">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                            </div>
                            <div class="item_info">
                                <h6 class="text-center bg-light p-1 mb-0">
                                    {{ item.title }}
                                </h6>
                                <p class="text-muted text-center colors m-0 p-1">
                                    Dostupne boje
                                </p>
                                <div class="item-colors text-center">
                                    {% foreach itemColor in item.itemColors %}
                                        <a id="color" style="background-color: {{ itemColor.color.value }}"></a>
                                    {% endfor %}
                                </div>
                                <h6 id="price" class="text-center p-1 bg-success text-white">
                                    Cijena:
                                    <span>
                                        {{ item.price }} kn
                                    </span>
                                </h6>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}

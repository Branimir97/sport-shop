{% extends 'base.html.twig' %}

{% block title %}
    {{ 'error404.title'|trans({}, 'error') }}
{% endblock %}
{% block body %}
    <div class="container text-center">
        <h1 class="bg-light">
            {{ 'error404.title'|trans({}, 'error') }}
        </h1>
        <img src="{{ asset('images/logo.png') }}" alt="sport_shop_icon">
        <p>
            {{ 'error404.message'|trans({}, 'error') }}
            <a href="{{ path('home') }}">
                {{ 'homepage_link'|trans({}, 'error') }}
            </a>
        </p>
    </div>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}
    {{ 'error403.title'|trans({}, 'error') }}
{% endblock %}
{% block body %}
    <div class="container text-center">
        <h1 class="text-center mt-2 bg-light p-2">
            {{ 'error403.title'|trans({}, 'error') }}
            <img class="panel_icon ml-1"
                 src="{{ asset('icons/warning.png') }}" alt="icon">
        </h1>
        <img src="{{ asset('images/logo.png') }}" alt="sport_shop_icon">
        <p>
            {{ 'error403.message'|trans({}, 'error') }}<br>
            <a href="{{ path('homepage') }}">
                {{ 'homepage_link'|trans({}, 'error') }}
            </a>
        </p>
    </div>
{% endblock %}
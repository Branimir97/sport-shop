{% extends 'base.html.twig' %}

{% block title %}
    {{ 'show.title'|trans({}, 'action_categories') }}
    - {{ action_category.category.name }}
{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-2 bg-light p-2">
            {{ 'show.title'|trans({}, 'action_categories') }}
            - {{ action_category.category.name }}
        </h2>
        <a href="{{ path('action_category_index') }}">
            <i class="fas fa-arrow-alt-circle-left"></i>
            {{ 'actionsList'|trans({}, 'action_categories') }}
        </a>
        <table class="table">
            <tbody>
            <tr>
                <th>
                    Id
                </th>
                <td>{{ action_category.id }}</td>
            </tr>
            <tr>
                <th>
                    {{ 'actionsTable.category'|trans({}, 'action_categories') }}
                </th>
                <td>{{ action_category.category.name }}</td>
            </tr>
            <tr>
                <th>
                    {{ 'actionsTable.name'|trans({}, 'action_categories') }}
                </th>
                <td>{{ action_category.title }}</td>
            </tr>
            <tr>
                <th>
                    {{ 'actionsTable.discount'|trans({}, 'action_categories') }}
                </th>
                <td>{{ action_category.discountPercentage }}</td>
            </tr>
            <tr>
                <th>
                    {{ 'actionsTable.createdAt'|trans({}, 'action_categories') }}
                </th>
                <td>{{ action_category.createdAt|date('H:i:s | d.m.Y.') }}</td>
            </tr>
            <tr>
                <th>
                    {{ 'actionsTable.updatedAt'|trans({}, 'action_categories') }}
                </th>
                <td>
                    {{ action_category.updatedAt ?
                    action_category.updatedAt|date('H:i:s | d.m.Y.') : '' }}
                </td>
            </tr>
            </tbody>
        </table>
        <div class="text-center">
            <a class="btn btn-outline-success" href="{{ path('action_category_edit',
                   {'id': action_category.id}) }}">
                {{ 'show.editAction'|trans({}, 'action_categories') }}
            </a>
            {{ include('actions/action_category/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}

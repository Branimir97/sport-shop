{% extends 'base.html.twig' %}

{% block title %}Akcija - {{ action_item.item.title }}{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-2 bg-light p-2">Akcija - {{ action_item.item.title }}</h2>
        <a href="{{ path('action_item_index') }}">
            <i class="fas fa-arrow-alt-circle-left"></i>
            Lista artikala na akciji
        </a>
        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ action_item.id }}</td>
            </tr>
            <tr>
                <th>Artikl</th>
                <td>{{ action_item.item.title }}</td>
            </tr>
            <tr>
                <th>Naziv akcije</th>
                <td>{{ action_item.title }}</td>
            </tr>
            <tr>
                <th>Popust</th>
                <td>{{ action_item.discountPercentage }}</td>
            </tr>
            <tr>
                <th>Vrijeme stvaranja</th>
                <td>{{ action_item.createdAt|date('H:i:s | d.m.Y.') }}</td>
            </tr>
            <tr>
                <th>Vrijeme zadnje izmjene</th>
                <td>{{ action_item.updatedAt ? action_item.updatedAt|date('H:i:s | d.m.Y.') : '' }}</td>
            </tr>
            </tbody>
        </table>
        <div class="text-center">
            <a class="btn btn-outline-success" href="{{ path('action_item_edit', {'id': action_item.id}) }}">Uredi podatke</a>
            {{ include('actions/action_item/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}

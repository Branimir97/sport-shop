{% extends 'base.html.twig' %}

{% block title %}
    {{ 'show.title'|trans({}, 'action_items') }}
    - {{ action_item.item.title }}{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-2 bg-light p-2">
            {{ 'show.title'|trans({}, 'action_items') }}
            - {{ action_item.item.title }}
        </h2>
        <a href="{{ path('action_item_index') }}">
            <i class="fas fa-arrow-alt-circle-left"></i>
            {{ 'actionsList'|trans({}, 'action_items') }}
        </a>
        <table class="table">
            <tbody>
            <tr>
                <th>
                    Id
                </th>
                <td>{{ action_item.id }}</td>
            </tr>
            <tr>
                <th>
                    {{ 'actionsTable.item'|trans({}, 'action_items') }}
                </th>
                <td>{{ action_item.item.title }}</td>
            </tr>
            <tr>
                <th>
                    {{ 'actionsTable.name'|trans({}, 'action_items') }}
                </th>
                <td>{{ action_item.title }}</td>
            </tr>
            <tr>
                <th>
                    {{ 'actionsTable.discount'|trans({}, 'action_items') }}
                </th>
                <td>{{ action_item.discountPercentage }}</td>
            </tr>
            <tr>
                <th>
                    {{ 'actionsTable.createdAt'|trans({}, 'action_items') }}
                </th>
                <td>{{ action_item.createdAt|date('H:i:s | d.m.Y.') }}</td>
            </tr>
            <tr>
                <th>
                    {{ 'actionsTable.updatedAt'|trans({}, 'action_items') }}
                </th>
                <td>
                    {{ action_item.updatedAt ?
                    action_item.updatedAt|date('H:i:s | d.m.Y.') : '' }}
                </td>
            </tr>
            </tbody>
        </table>
        <div class="text-center">
            <a class="btn btn-outline-success" href="{{ path('action_item_edit',
                   {'id': action_item.id}) }}">
                {{ 'show.editAction'|trans({}, 'action_items') }}
            </a>
            {{ include('actions/action_item/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}

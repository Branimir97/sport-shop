{% extends 'base.html.twig' %}

{% block title %}
    {{ 'show.title'|trans({}, 'action_items') }}
    - {{ action_item.item.title }}
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("css/container50.css") }}">
{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-2 bg-light p-2">
            {{ 'show.title'|trans({}, 'action_items') }}
            - {{ action_item.item.title }}
        </h2>
        <a href="{{ path('action_item_index') }}">
            <i class="fas fa-arrow-alt-circle-left"></i>
            {{ 'actionsList'|trans({}, 'action_items') }}
        </a>
        {{ include('actions/action_item/_form.html.twig',
            {'button_label': 'Spremi promjene'}) }}
        <div class="text-center">
            {{ include('actions/action_item/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Size{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-2 bg-light p-2">Veličina {{ size.value }}</h2>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ size.id }}</td>
                </tr>
                <tr>
                    <th>Value</th>
                    <td>{{ size.value }}</td>
                </tr>
                <tr>
                    <th>Type</th>
                    <td>{{ size.type }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('size_index') }}">
            <i class="fas fa-arrow-alt-circle-left"></i>
            Nazad na listu veličina
        </a>

        <div class="text-center">
            <a class="btn btn-outline-success" href="{{ path('size_edit', {'id': size.id}) }}">Uredi podatke</a>

            {{ include('size/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}

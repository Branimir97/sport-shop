{% extends 'base.html.twig' %}

{% block title %}
    {{ 'show.title'|trans({}, 'category') }}
    "{{ category.name }}"
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("css/container50.css") }}">
{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center p-2 mt-2 bg-light">
            {{ 'show.title'|trans({}, 'category') }}
            "{{ category.name }}"
        </h2>
        <a href="{{ path('category_index') }}">
            <i class="fas fa-arrow-alt-circle-left"></i>
            {{ 'categoriesList'|trans({}, 'category') }}
        </a>
        {{ include('category/_form.html.twig',
            {'button_label': 'form.edit_button_label'|trans({}, 'category')}) }}
        <div class="text-center">
            {{ include('category/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}

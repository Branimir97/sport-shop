{% extends 'base.html.twig' %}

{% block title %}Kategorija "{{ category.name }}"{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-2 bg-light p-2">
            Kategorija "{{ category.name }}"
        </h2>
        <a href="{{ path('category_index') }}">
            <i class="fas fa-arrow-alt-circle-left"></i>
            Lista kategorija
        </a>
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ category.id }}</td>
                </tr>
                <tr>
                    <th>Naziv kategorije</th>
                    <td>{{ category.name }}</td>
                </tr>
                <tr>
                    <th>Vrijeme stvaranja</th>
                    <td>{{ category.createdAt|date('H:i:s | d.m.Y.')}}</td>
                </tr>
                <tr>
                    <th>Vrijeme zadnje izmjene</th>
                    <td>
                        {{ category.updatedAt ?
                        category.updatedAt|date('H:i:s | d.m.Y.') : '' }}
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="text-center">
            <a class="btn btn-outline-success"
               href="{{ path('category_edit', {'id': category.id}) }}">
                Uredi podatke
            </a>
            {{ include('category/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}

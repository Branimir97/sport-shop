{% extends 'base.html.twig' %}

{% block title %}Kategorija {{ category.name }}{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-2 bg-light p-2">Kategorija {{ category.name }}</h2>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ category.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ category.name }}</td>
                </tr>
                <tr>
                    <th>CreatedAt</th>
                    <td>{{ category.createdAt ? category.createdAt|date('m.d.Y. H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>UpdatedAt</th>
                    <td>{{ category.updatedAt ? category.updatedAt|date('m.d.Y. H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('category_index') }}">
            <i class="fas fa-arrow-alt-circle-left"></i>
            Nazad na listu kategorija
        </a>

        <div class="text-center">
            <a class="btn btn-outline-success" href="{{ path('category_edit', {'id': category.id}) }}">Uredi podatke</a>

            {{ include('category/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}

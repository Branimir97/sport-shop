{% extends 'base.html.twig' %}

{% block title %}
    {{ 'show.title'|trans({}, 'category') }}
    "{{ category.name }}"{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-2 bg-light p-2">
            {{ 'show.title'|trans({}, 'category') }}
            "{{ category.name }}"
        </h2>
        <a href="{{ path('category_index') }}">
            <i class="fas fa-arrow-alt-circle-left"></i>
            {{ 'categoriesList'|trans({}, 'category') }}
        </a>
        <table class="table">
            <tbody>
                <tr>
                    <th>
                        Id
                    </th>
                    <td>{{ category.id }}</td>
                </tr>
                <tr>
                    <th>
                        {{ 'categoriesTable.name'|trans({}, 'category') }}
                    </th>
                    <td>{{ category.name }}</td>
                </tr>
                <tr>
                    <th>
                        {{ 'categoriesTable.createdAt'|trans({}, 'category') }}
                    </th>
                    <td>{{ category.createdAt|date('H:i:s | d.m.Y.')}}</td>
                </tr>
                <tr>
                    <th>
                        {{ 'categoriesTable.updatedAt'|trans({}, 'category') }}
                    </th>
                    <td>
                        {{ category.updatedAt ?
                        category.updatedAt|date('H:i:s | d.m.Y.') : '' }}
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="text-center">
            <a class="btn btn-outline-success"
               href="{{ path('category_edit', {'id': category.id}) }}">
                {{ 'show.editCategory'|trans({}, 'category') }}
            </a>
            {{ include('category/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
